.card
  .card-header
    %h2
      ユーザー情報
    %ul.nav.nav-tabs.card-header-tabs
      %li.nav-item
        %a.active.nav-link{href: '#tab1', 'data-toggle': 'tab'}
          timeline
      %li.nav-item
        %a.nav-link{href: '#tab2', 'data-toggle': 'tab'}
          follow
      %li.nav-item
        %a.nav-link{href: '#tab3', 'data-toggle': 'tab'}
          follower
      %li.nav-item
        %a.nav-link{href: '#tab4', 'data-toggle': 'tab'}
          編集
      %li.nav-item
        %a.nav-link{href: '#tab5', 'data-toggle': 'tab'}
          削除
  .card-body
    .tab-content
      .tab-pane.active#tab1
        = render 'timeline', timeline: @timeline
      .tab-pane#tab2
        = render 'userlist', users: @follows
      .tab-pane#tab3
        = render 'userlist', users: @followers
      .tab-pane#tab4
        = render 'setting'
      .tab-pane#tab5
        = render 'destroy'

  .card-footer
    = link_to "戻る", :back, class: "btn btn-primary"
